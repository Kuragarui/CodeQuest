[sub_resource type="GDScript" id="GDScript_ekxnf"]
script/source = "extends Control

@onready var black_screen: ColorRect = $Blackscreen

func _ready() -> void:
	black_screen.modulate.a = 0.0
	
	# Show credits for 8 seconds
	await get_tree().create_timer(8.0).timeout
	
	# Slow fade to black over 4 seconds with smooth easing
	var tween = create_tween()
	tween.set_ease(Tween.EASE_IN_OUT)
	tween.set_trans(Tween.TRANS_SINE)
	tween.tween_property(black_screen, \"modulate:a\", 1.0, 4.0)
	await tween.finished
	
	# Small pause on black before changing scene
	await get_tree().create_timer(1.0).timeout
	
	# Go to main menu
	get_tree().change_scene_to_file(\"res://ending_scene/credits.tscn\")
"

